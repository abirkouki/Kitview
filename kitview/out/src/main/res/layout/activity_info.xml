<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <EditText
        android:id="@+id/nomCabinet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:text="Cabinet Blabla"
        android:textSize="30dp"
        android:layout_weight="0.13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:layout_weight="0.27">

        <TextView
            android:id="@+id/address"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Adresse : "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/adresseCabinet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="1 rue Machin, 12586 Truc "
            android:textSize="20dp" />



    </LinearLayout>

    <Button
        android:id="@+id/buttonMap"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Visualiser sur la map" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_weight="0.14">

        <TextView
            android:id="@+id/phone"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Téléphone : "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/phoneCabinet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text=" 05 21 47 89 63"
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonCall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Appeler" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/email"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Email : "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/emailCabinet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text=" blabla@gmail.com"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Envoyer un email" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kitview.out.mobile">

    <application
        android:label="KitView-Out">

        <activity
            android:name="out.activity.SplashScreenActivity"
            android:launchMode="standard"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="out.activity.MainActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="standard" />


        <activity
            android:name="out.activity.PracticeActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="standard" />

        <activity
            android:name="activity.ScenariosActivity"
            android:configChanges="orientation"
            android:noHistory="true"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="activity.SettingsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="standard" >
        </activity>


    </application>

</manifest>
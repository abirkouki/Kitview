<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="ChromeStylePopup" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    
    <style name="Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">5dip</item>
    </style>
    <style name="ButtonTop" parent="@style/Button">
<!--        <item name="android:background">@drawable/btn_top</item>-->
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ButtonBottom" parent="@style/Button">
        <item name="android:layout_width">60dip</item>
    </style>
    <style name="ButtonConnect" parent="@style/Button">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">85dip</item>
        <item name="android:layout_height">38dip</item>
    </style>
    <style name="help_title">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="help_content">
        <item name="android:textSize">10sp</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="ListText">
        <item name="android:typeface">monospace</item>
    </style>
    <style name="ListTextTitle" parent="ListText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="ListTextSummary" parent="ListText">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    
    
    
    
    
    
    

</resources>
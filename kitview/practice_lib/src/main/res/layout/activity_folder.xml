<?xml version="1.0" encoding="utf-8"?>
<ViewAnimator xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewpager"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/item1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <util.components.imagezoom.ImageViewTouch
                android:id="@+id/ivt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="matrix"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_left_index"
                    android:layout_width="@dimen/circle"
                    android:layout_height="@dimen/circle"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/foldertextsize"
                    android:textStyle="bold"
                    android:visibility="invisible" />
                <!--
                    android:shadowColor="@color/white"
                    android:shadowRadius="10.0"
                -->

                <TextView
                    android:id="@+id/tv_left"
                    android:layout_width="@dimen/popup_button_width"
                    android:layout_height="@dimen/popup_button_height2"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/button_style_red_transparent3"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/foldertextsize"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_delta"
                    android:layout_width="@dimen/circle"
                    android:layout_height="@dimen/circle"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:background="@drawable/circle2"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/foldertextsize"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/picture_previous_previous"
                    android:layout_width="@dimen/popup_button_width2"
                    android:layout_height="@dimen/popup_button_height"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_style_red_transparent2"
                    android:text="&lt;&lt;"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/popup_content"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/left_picture_previous"
                    android:layout_width="@dimen/popup_button_width2"
                    android:layout_height="@dimen/popup_button_height"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_style_red_transparent"
                    android:text="&lt;"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/popup_content"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/left_picture_next"
                    android:layout_width="@dimen/popup_button_width2"
                    android:layout_height="@dimen/popup_button_height"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_style_red_transparent"
                    android:text=">"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/popup_content"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <util.components.imagezoom.ImageViewTouch
                android:id="@+id/ivt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="matrix"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_right_index"
                    android:layout_width="@dimen/circle"
                    android:layout_height="@dimen/circle"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/foldertextsize"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="@dimen/popup_button_width"
                    android:layout_height="@dimen/popup_button_height2"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/button_style_red_transparent3"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/foldertextsize"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <Button
                    android:id="@+id/right_picture_previous"
                    android:layout_width="@dimen/popup_button_width2"
                    android:layout_height="@dimen/popup_button_height"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_style_red_transparent"
                    android:text="&lt;"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/popup_content"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/right_picture_next"
                    android:layout_width="@dimen/popup_button_width2"
                    android:layout_height="@dimen/popup_button_height"
                    android:layout_margin="0dp"
                    android:background="@drawable/button_style_red_transparent"
                    android:text=">"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/popup_content"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/picture_next_next"
                    android:layout_width="@dimen/popup_button_width2"
                    android:layout_height="@dimen/popup_button_height"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_style_red_transparent2"
                    android:text=">>"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/popup_content"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelayout_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- <include android:layoutDirection="@layout/treelist"/> -->

        <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:clickable="false" />

        <FrameLayout
            android:id="@+id/panel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/black_transparent" >

            <!-- android:background="@drawable/panel_background" -->

            <ListView
                android:id="@+id/album_list"
                android:layout_width="@dimen/list_item_width"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:fadingEdge="none"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:listSelector="@android:color/transparent"
                android:scrollbarThumbVertical="@null"
                android:scrollbars="none"
                android:visibility="visible"
                android:fastScrollEnabled="false" />
        </FrameLayout>

        <!-- <include layout="@layout/image_detail_bottombar" /> -->
    </FrameLayout>

</ViewAnimator>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:background="@drawable/dialog_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

          
        
        
          <LinearLayout
            android:id="@+id/multicomputers_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_settings_space_between_items"
            android:layout_marginLeft="@dimen/app_settings_subtext_leftspace"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/multicomputers_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="calibri"
                android:text="@string/multicomputers"
                android:textAllCaps="true"
                android:textColor="@color/grey"
                android:textSize="@dimen/app_settings_text_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_refresh_multicomputers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_refresh" />

            <Spinner
                android:id="@+id/multicomputers_spinner"
                android:layout_width="@dimen/app_settings_interaction_component_width2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
          
        
        <LinearLayout
            android:id="@+id/ll_remoteserver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_settings_space_between_items"
            android:layout_marginLeft="@dimen/app_settings_subtext_leftspace"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_remoteserver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="calibri"
                android:text="@string/remoteserver"
                android:textAllCaps="true"
                android:textColor="@color/grey"
                android:textSize="@dimen/app_settings_text_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_remoteserver"
                android:layout_width="@dimen/app_settings_interaction_component_width2"
                android:layout_height="wrap_content"
                android:textColor="@color/grey" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_kitview_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ti_kitview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_settings_subtext_leftspace"
                android:fontFamily="calibri"
                android:text="@string/kitview_computer"
                android:textAllCaps="true"
                android:textColor="@color/grey"
                android:textSize="@dimen/app_settings_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_kitview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_settings_space_between_items"
                android:layout_marginLeft="@dimen/app_settings_subtext_leftspace2"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_kitview_ip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="calibri"
                    android:text="@string/ip"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_transparent"
                    android:textSize="@dimen/app_settings_text_size"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_kitview_ip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_search" />

                <EditText
                    android:id="@+id/et_kitview_ip"
                    android:layout_width="@dimen/app_settings_interaction_component_width2"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_kitview_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_settings_space_between_items"
                android:layout_marginLeft="@dimen/app_settings_subtext_leftspace2"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_kitview_port"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="calibri"
                    android:text="@string/port"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_transparent"
                    android:textSize="@dimen/app_settings_text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_kitview_port"
                    android:layout_width="@dimen/app_settings_interaction_component_width2"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey" />
            </LinearLayout>
        </LinearLayout>

        
        <LinearLayout
            android:id="@+id/ll_connection_timeout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_settings_space_between_items"
            android:layout_marginLeft="@dimen/app_settings_subtext_leftspace"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_connection_timeout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="calibri"
                android:text="@string/connection_timeout"
                android:textAllCaps="true"
                android:textColor="@color/grey"
                android:textSize="@dimen/app_settings_text_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_connection_timeout"
                android:layout_width="@dimen/app_settings_interaction_component_width2"
                android:layout_height="wrap_content"
                android:textColor="@color/grey" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_streaming_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_streaming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_settings_subtext_leftspace"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_streaming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="calibri"
                    android:text="@string/streaming"
                    android:textAllCaps="true"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/app_settings_text_size"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/sw_streaming"
                    android:layout_width="@dimen/app_settings_interaction_component_width2"
                    android:layout_height="wrap_content"
                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_streaming_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_settings_space_between_items"
                android:layout_marginLeft="@dimen/app_settings_subtext_leftspace2"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_streaming_ip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="calibri"
                    android:text="@string/ip"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_transparent"
                    android:textSize="@dimen/app_settings_text_size"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_streaming_ip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_search" />

                <EditText
                    android:id="@+id/et_streaming_ip"
                    android:layout_width="@dimen/app_settings_interaction_component_width2"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_streaming_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_settings_space_between_items"
                android:layout_marginLeft="@dimen/app_settings_subtext_leftspace2"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_streaming_port"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="calibri"
                    android:text="@string/port"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_transparent"
                    android:textSize="@dimen/app_settings_text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_streaming_port"
                    android:layout_width="@dimen/app_settings_interaction_component_width2"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_android_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_settings_subtext_leftspace"
                android:layout_weight="1"
                android:fontFamily="calibri"
                android:text="@string/android"
                android:textAllCaps="true"
                android:textColor="@color/grey"
                android:textSize="@dimen/app_settings_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_android_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_settings_space_between_items"
                android:layout_marginLeft="@dimen/app_settings_subtext_leftspace2"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_android_port"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="calibri"
                    android:text="@string/port"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_transparent"
                    android:textSize="@dimen/app_settings_text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_android_port"
                    android:layout_width="@dimen/app_settings_interaction_component_width2"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/bt_restore"
            android:layout_width="@dimen/app_settings_interaction_component_width2"
            android:layout_height="@dimen/popup_button_height"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/button_style_red_transparent"
            android:text="@string/reset"
            android:textColor="@color/white"
            android:textSize="@dimen/app_settings_subtext_size" />
    </LinearLayout>

</ScrollView>